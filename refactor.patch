+Manager::Listener*
+Manager::GetListener(ListenerId aListenerId) const
+{
+  NS_ASSERT_OWNINGTHREAD(Manager);
+  for (uint32_t i = 0; i < mListeners.Length(); ++i) {
+    if (reinterpret_cast<ListenerId>(mListeners[i]) == aListenerId) {
+      return mListeners[i];
+    }
+  }
+  return nullptr;
+}
