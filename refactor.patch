+Manager::CurrentContext()
+{
+  NS_ASSERT_OWNINGTHREAD(Manager);
+  if (!mContext) {
+    nsRefPtr<Action> setupAction = new SetupAction(mOrigin, mBaseDomain);
+    mContext = new Context(this, mOrigin, mBaseDomain, setupAction);
+  }
+  return mContext;
