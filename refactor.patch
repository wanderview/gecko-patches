+  : mOrigin(aOrigin)
+  , mBaseDomain(aBaseDomain)
+  , mContext(nullptr)
+{
+  nsresult rv = NS_NewNamedThread("DOMCacheThread",
+                                  getter_AddRefs(mIOThread));
+  if (NS_FAILED(rv)) {
+    MOZ_CRASH("Failed to spawn cache manager IO thread.");
+  }
