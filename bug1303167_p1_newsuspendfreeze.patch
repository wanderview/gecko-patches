+bool
+nsGlobalWindow::NewIsFrozen() const
+{
+  MOZ_ASSERT(NS_IsMainThread());
+  // No inner means we are effectively frozen
+  FORWARD_TO_INNER(NewIsFrozen, (), true);
+  bool frozen =  mFreezeDepth != 0;
+  MOZ_ASSERT_IF(frozen, NewIsSuspended());
+  return frozen;
+}
