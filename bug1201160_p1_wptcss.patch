+async_test(function(t) {
+  return doTest(t, {
+    name: 'cors-stylesheet',
+    origin: crossOrigin,
+    cors: true,
+    expectBgImage: true
+  });
+}, 'Service worker should see sub-resource for cross-origin CORS stylesheet.');
+</script>
