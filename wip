+  Focus();
+
+  already_AddRefed<GenericPromise>
+  PostMessage(ipc::StructuredCloneData& aData,
+              const ClientEndPoint& aEndPoint);
+
+  NS_INLINE_DECL_REFCOUNTING(ClientHandle);
+};
