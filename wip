+Client::Client(nsIGlobalObject* aGlobal,
+               const ClientInfoAndState& aClientInfoAndState)
+  : mGlobal(aGlobal)
+  , mClientInfoAndState(aClientInfoAndState)
+{
+  MOZ_DIAGNOSTIC_ASSERT(mGlobal);
