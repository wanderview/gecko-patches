+
+TimeStamp
+Client::CreationTime() const
+{
+  return mClientInfoAndState.info().creationTime();
+}
+
+TimeStamp
+Client::LastFocusTime() const
+{
+  if (mClientInfoAndState.info().type() != ClientType::Window) {
+    return TimeStamp();
+  }
+  return mClientInfoAndState.state().get_ClientWindowState().lastFocusTime();
+}
+
+JSObject*
+Client::WrapObject(JSContext* aCx, JS::Handle<JSObject*> aGivenProto)
+{
+  return ClientBinding::Wrap(aCx, this, aGivenProto);
+}
+
+nsIGlobalObject*
+Client::GetParentObject() const
+{
+  return mGlobal;
+}
+
+void
+Client::GetUrl(nsAString& aUrlOut) const
+{
+  CopyUTF8toUTF16(mClientInfoAndState.info().url(), aUrlOut);
+}
+
+void
+Client::GetId(nsAString& aIdOut) const
+{
+  char buf[NSID_LENGTH];
+  mClientInfoAndState.info().id().ToProvidedString(buf);
+  CopyUTF8toUTF16(nsDependentCString(buf), aIdOut);
+}
+
+ClientType
+Client::Type() const
+{
+  return mClientInfoAndState.info().type();
+}
+
