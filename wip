+/* -*- Mode: C++; tab-width: 8; indent-tabs-mode: nil; c-basic-offset: 2 -*- */
+/* vim: set ts=8 sts=2 et sw=2 tw=80: */
+/* This Source Code Form is subject to the terms of the Mozilla Public
+ * License, v. 2.0. If a copy of the MPL was not distributed with this
+ * file, You can obtain one at http://mozilla.org/MPL/2.0/. */
+
+#include "ClientQueryParent.h"
+
+namespace mozilla {
+namespace dom {
+
+void
+ClientQueryParent::ActorDestroy(ActorDestroyReason aReason)
+{
+  mPromiseRequestHolder.DisconnectIfExists();
+}
+
+void
+ClientQueryParent::Init(ClientManagerService* aService,
+                        const ClientQueryConstructorArgs& aArgs)
+{
+  MOZ_DIAGNOSTIC_ASSERT(aService);
+
+  RefPtr<ClientQueryPromise> p = aService->Query(aArgs);
+
+  p->Then(aService->BackgroundThread(), __func__,
+          [this] (const ClientList& aResult) {
+            mPromiseRequestHolder.Complete();
+            Unused << PClientQueryParent::Send__delete__(this, aResult);
+          }, [this] (nsresult aResult) {
+            mPromiseRequestHolder.Complete();
+            Unused << PClientQueryParent::Send__delete__(this, aResult);
+          })->Track(mPromiseRequestHolder);
+}
+
+} // namespace dom
+} // namespace mozilla
