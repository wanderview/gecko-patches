+/* -*- Mode: C++; tab-width: 8; indent-tabs-mode: nil; c-basic-offset: 2 -*- */
+/* vim: set ts=8 sts=2 et sw=2 tw=80: */
+/* This Source Code Form is subject to the terms of the Mozilla Public
+ * License, v. 2.0. If a copy of the MPL was not distributed with this
+ * file, You can obtain one at http://mozilla.org/MPL/2.0/. */
+
+#include "ClientActorChild.h"
+
+#include "ClientWorkerHolder.h"
+#include "nsThreadUtils.h"
+
+namespace mozilla {
+namespace dom {
+
+void
+ClientActorChild::SetWorkerHolder(ClientWorkerHolder* aWorkerHolder)
+{
+  // Some of the Client actors can have multiple DOM objects associated with
+  // them.  In this case the workerHolder will be added multiple times.  This is
+  // permitted, but the workerHolder should be the same each time.
+  if (mWorkerHolder) {
+    MOZ_ASSERT(mWorkerHolder == aWorkerHolder);
+    return;
+  }
+
+  mWorkerHolder = aWorkerHolder;
+  if (mWorkerHolder) {
+    mWorkerHolder->AddActor(this);
+  }
+}
+
+void
+ClientActorChild::RemoveWorkerHolder()
+{
+  MOZ_ASSERT_IF(!NS_IsMainThread(), mWorkerHolder);
+  if (mWorkerHolder) {
+    mWorkerHolder->RemoveActor(this);
+    mWorkerHolder = nullptr;
+  }
+}
+
+ClientWorkerHolder*
+ClientActorChild::GetWorkerHolder() const
+{
+  return mWorkerHolder;
+}
+
+bool
+ClientActorChild::WorkerHolderNotified() const
+{
+  return mWorkerHolder && mWorkerHolder->Notified();
+}
+
+ClientActorChild::ClientActorChild()
+{
+}
+
+ClientActorChild::~ClientActorChild()
+{
+  MOZ_ASSERT(!mWorkerHolder);
+}
+
+} // namespace dom
+} // namespace mozilla
