+Client::PostMessage(JSContext* aCx, JS::Handle<JS::Value> aMessage,
+                    const Sequence<JSObject*>& aTransferrable,
+                    ErrorResult& aRv)
+{
+}
+
+VisibilityState
+Client::GetVisibilityState() const
+{
+  return mClientInfoAndState.state().get_ClientWindowState().visibilityState();
+}
+
+bool
+Client::Focused() const
+{
+  return mClientInfoAndState.state().get_ClientWindowState().focused();
