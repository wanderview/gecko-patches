+void
 nsPIDOMWindowOuter::NotifyCreatedNewMediaComponent()
 {
   if (mMediaSuspend != nsISuspendedTypes::SUSPENDED_BLOCK) {
     return;
   }
 
   // If the document is already on the foreground but the suspend state is still
   // suspend-block, that means the media component was created after calling
@@ -12378,16 +12438,37 @@ nsGlobalWindow::SyncStateFromParentWindo
 
   // Now apply only the number of Suspend() calls to reach the target
   // suspend count after applying the Freeze() calls.
   for (uint32_t i = 0; i < (parentSuspendDepth - parentFreezeDepth); ++i) {
     Suspend();
   }
 }
 
+void
+nsGlobalWindow::SetServiceWorkerController(uint64_t aServiceWorkerID)
+{
+  MOZ_ASSERT(IsInnerWindow());
+  // If this document is just being loaded then there may only be a
+  // reserved client on the channel and no execution ready client yet.
+  // Ignore this call then.  The reserved client must be marked as
+  // controlled by the ServiceWorkerManager before it dispatches its
+  // FetchEvent.
+  if (!mClientSource) {
+    return;
+  }
+
+  // If we have a client source here then it means one of the following
+  // has happened:
+  //  * the window is being re-controlled after coming out of bfcache
+  //  * the ServiceWorker is called clients.claim()
+  //  * the ServiceWorker called skipWating()
+  mClientSource->SetController(aServiceWorkerID);
+}
