 nsresult
 CSSStyleSheet::SubjectSubsumesInnerPrincipal()
 {
+  // Note, we do not check for opaque tainting here because its based solely
+  // on the document principal when the sheet is loaded.  Code using this method
+  // needs to check against the current subject principal which may be different
+  // than the document principal.
+
   nsCOMPtr<nsIPrincipal> subjectPrincipal = nsContentUtils::SubjectPrincipal();
   if (subjectPrincipal->Subsumes(mInner->mPrincipal)) {
     return NS_OK;
   }
 
   // Allow access only if CORS mode is not NONE
   if (GetCORSMode() == CORS_NONE) {
     return NS_ERROR_DOM_SECURITY_ERR;
