+  void
+  ForgetSource(ClientSource* aSource);
+
+  mozilla::dom::workers::WorkerPrivate*
+  GetWorkerPrivate() const;
+
+  // Private methods calls by ClientHandle
+  void
+  ForgetHandle(ClientHandle* aHandle);
+
