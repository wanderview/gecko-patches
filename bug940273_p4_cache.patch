+    if (aRequest.IsUSVString()) {
+      *entry->mRequest.SetAsUSVString().ToAStringPtr() =
+        aRequest.GetAsUSVString();
+    } else {
+      entry->mRequest.SetAsRequest() =
+        &aRequest.GetAsRequest();
+    }
