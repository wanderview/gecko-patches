+        return NS_OK;
+      }
+
+      mState = STATE_RUNNING;
+
+      if (!mQuotaIOThreadAction) {
+        Resolve(NS_OK);
+        return NS_OK;
+      }
+
+      mQuotaIOThreadAction->RunOnTarget(this, mQuotaInfo);
