+  aOut.status() = aIn.GetStatus();
+  aOut.statusText() = aIn.GetStatusText();
+  nsRefPtr<InternalHeaders> headers = aIn.Headers();
+  MOZ_ASSERT(headers);
+  headers->GetPHeaders(aOut.headers());
