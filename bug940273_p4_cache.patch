+    if (aActor) {
+      PCacheChild::Send__delete__(aActor);
+    }
+    return;
+  }
+
+  if (NS_FAILED(aRv)) {
+    promise->MaybeReject(aRv);
+    return;
+  }
+
+  if (!aActor) {
+    promise->MaybeReject(NS_ERROR_DOM_INVALID_ACCESS_ERR);
+    return;
+  }
+
+  nsRefPtr<Cache> cache = new Cache(mGlobal, mOrigin, aActor);
+  promise->MaybeResolve(cache);
+}
